@model List<Creators.Creators.Models.CommentsForUser>

@{
    ViewData["Title"] = "Comments for Photo";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Comment</th>
                <th>Date</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                <tr>
                    <td>@comment.User</td>
                    <td>@comment.Text</td>
                    <td>@comment.Date.ToString("yyyy-MM-dd")</td>
                    <td>@comment.Time.ToString("HH:mm:ss")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No comments available for this photo.</p>
}
