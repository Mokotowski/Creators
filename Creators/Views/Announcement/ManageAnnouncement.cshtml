@model List<Creators.Creators.Database.CreatorAnnouncement>

@section Styles {
    <link rel="stylesheet" href="~/css/announcement.css" />
}


<h2>Manage Announcements</h2>

<form asp-action="AddAnnouncement" method="post" class="announcement-form">
    <h3>Add New Announcement</h3>
    <div class="form-group">
        <label for="Title">Title:</label>
        <input type="text" id="Title" name="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Description">Description:</label>
        <textarea id="Description" name="Description" class="form-control" rows="4" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add Announcement</button>
</form>

<hr />

@if (Model.Any())
{
    <h3>Existing Announcements</h3>
    @foreach (var announcement in Model)
    {
        <div class="announcement-item">
            <form asp-action="UpdateAnnouncement" method="post" class="update-form">
                <input type="hidden" name="Id" value="@announcement.Id" />
                <div class="form-group">
                    <label for="Title_@announcement.Id">Title:</label>
                    <input type="text" id="Title_@announcement.Id" name="Title" class="form-control" value="@announcement.Title" required />
                </div>
                <div class="form-group">
                    <label for="Description_@announcement.Id">Description:</label>
                    <textarea id="Description_@announcement.Id" name="Description" class="form-control" rows="4" required>@announcement.Description</textarea>
                </div>
                <div class="form-buttons">
                    <button type="submit" class="btn btn-success">Update</button>
                    <button type="button" class="btn btn-danger" onclick="deleteAnnouncement(@announcement.Id)">Delete</button>
                </div>
            </form>
        </div>
    }
}
else
{
    <p>No announcements available.</p>
}

<script>
    function deleteAnnouncement(id) {
        if (confirm("Are you sure you want to delete this announcement?")) {
            var form = document.createElement('form');
            form.method = 'post';
            form.action = '@Url.Action("DeleteAnnouncement", "Announcement")';

            var hiddenField = document.createElement('input');
            hiddenField.type = 'hidden';
            hiddenField.name = 'Id';
            hiddenField.value = id;
            form.appendChild(hiddenField);

            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
