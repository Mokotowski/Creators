@section Styles {
    <link rel="stylesheet" href="~/css/creator.css" />
}

@{
    ViewData["Title"] = "Update page";
}



<div class="creator-container-info">
    <div class="creator-info"> 
        @if (ViewBag.Result == "Success")
        {
            <h2>Update Successful</h2>
            <p>Your page has been successfully updated. All changes have been applied correctly.</p>
            <p>You can view your page at the following link <a href="@Url.Action("ShowPage", "Creator", new { Id_Creator = ViewBag.Id_Creator })">here</a></p>
        }
        else if (ViewBag.Result == "Error")
        {
            <h2>Update Failed</h2>
            <p>Something went wrong while trying to update your page. Please try again.</p>
            <p>If the issue persists, you may need to refresh the page or request another update your page.</p>
        }
        else if (ViewBag.Result == "Exist")
        {
            <h2>Page Not Found</h2>
            <p>It seems that the page you are trying to update does not exist. Please verify the user, email or page details and try again.</p>
        }
        else if (ViewBag.Result == "UserError")
        {
            <h2>User Mismatch</h2>
            <p>The user requesting the change does not match the currently logged-in user. Please make sure you are logged in with the correct account and try again.</p>
        }
        else
        {
            <h2>Unknown Error</h2>
            <p>An unexpected error occurred. Please try again later or contact support if the problem continues.</p>
        }
    </div>
</div>