@model Creators.Creators.Models.CreatorPageShow

@section Styles {
    <link rel="stylesheet" href="~/css/creator.css" />
}

@{
    ViewData["Title"] = "Manage Creator Profile";
}

<div class="creator-manage-container">
    <h1>Manage Your Creator Profile</h1>

    <form method="post" enctype="multipart/form-data" asp-action="UpdatePageRequest" asp-controller="Creator">

        <div class="creator-manage-section">
            <h2>Profile Description</h2>
            <label for="description">Description:</label>
            <textarea id="description" name="Description" rows="4" maxlength="500" required>@Model.Description</textarea>
        </div>

        <div class="creator-manage-section">
            <h2>Profile Picture</h2>
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.ProfilPicture)" alt="Profile Picture" class="profile-image" />
            <label for="ProfileImage">Upload New Picture:</label>
            <input type="file" id="ProfileImage" name="ProfileImage" accept="image/jpeg, image/png, image/gif" />
        </div>

        <div class="creator-manage-section">
            <h2>Notification Preferences</h2>
            <div class="notification-options">
                <label>
                    Notify about new images
                    <input type="checkbox" id="NotifyImages" name="NotifyImages" value="true" @(Model.NotifyImages ? "checked" : "") />
                </label>
                <label>
                    Notify about new events
                    <input type="checkbox" id="NotifyEvents" name="NotifyEvents" value="true" @(Model.NotifyEvents ? "checked" : "") />
                </label>
            </div>
        </div>

        <div class="creator-manage-section">
            <h2>Bio Links</h2>
            <label for="bioLinks">Bio Links:</label>
            <input type="text" id="bioLinks" name="BioLinks" value="@Model.BioLinks" placeholder="Enter Bio Links (comma separated)" />
        </div>

        <div class="creator-manage-section">
            <button type="submit" class="btn-update-profile">Update Profile</button>
        </div>
    </form>
</div>
